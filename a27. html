        function startMachine() {
            // ‡§¨‡§ü‡§® ‡§õ‡•Å‡§™‡§æ‡§è‡§Ç
            document.getElementById('startScreen').style.display = 'none';
            // ‡§Ü‡§â‡§ü‡§™‡•Å‡§ü ‡§¨‡•â‡§ï‡•ç‡§∏ ‡§¶‡§ø‡§ñ‡§æ‡§è‡§Ç
            const outputDiv = document.getElementById('consoleOutput');
            outputDiv.style.display = 'block';

            let lineIndex = 0;
            let charIndex = 0;

            // ‡§Æ‡§∂‡•Ä‡§® ‡§ü‡§æ‡§á‡§™‡§ø‡§Ç‡§ó ‡§´‡§Ç‡§ï‡•ç‡§∂‡§®
            function typeLine() {
                if (lineIndex < textLines.length) {
                    // ‡§®‡§à ‡§≤‡§æ‡§á‡§® ‡§¨‡§®‡§æ‡§è‡§Å
                    const p = document.createElement('div');
                    outputDiv.appendChild(p);
                    
                    // ‡§â‡§∏ ‡§≤‡§æ‡§á‡§® ‡§ï‡•á ‡§ü‡•á‡§ï‡•ç‡§∏‡•ç‡§ü ‡§ï‡•ã ‡§è‡§ï-‡§è‡§ï ‡§Ö‡§ï‡•ç‡§∑‡§∞ ‡§ï‡§∞‡§ï‡•á ‡§≤‡§ø‡§ñ‡•á‡§Ç
                    let currentLine = textLines[lineIndex];
                    let i = 0;
                    
                    const interval = setInterval(() => {
                        p.textContent += currentLine.charAt(i);
                        i++;
                        
                        // ‡§™‡•á‡§ú ‡§ï‡•ã ‡§®‡•Ä‡§ö‡•á ‡§∏‡•ç‡§ï‡•ç‡§∞‡•â‡§≤ ‡§ï‡§∞‡•á‡§Ç
                        window.scrollTo(0, document.body.scrollHeight);

                        if (i >= currentLine.length) {
                            clearInterval(interval);
                            lineIndex++;
                            // ‡§Ö‡§ó‡§≤‡•Ä ‡§≤‡§æ‡§á‡§® ‡§•‡•ã‡§°‡§º‡•Ä ‡§¶‡•á‡§∞ ‡§¨‡§æ‡§¶ ‡§∂‡•Å‡§∞‡•Ç ‡§ï‡§∞‡•á‡§Ç (100ms)
                            setTimeout(typeLine, 100); 
                        }
                    }, 20); // ‡§ü‡§æ‡§á‡§™‡§ø‡§Ç‡§ó ‡§∏‡•ç‡§™‡•Ä‡§° (‡§ú‡§ø‡§§‡§®‡§æ ‡§ï‡§Æ ‡§®‡§Ç‡§¨‡§∞, ‡§â‡§§‡§®‡§æ ‡§§‡•á‡§ú)
                } else {
                    // ‡§Ö‡§Ç‡§§ ‡§Æ‡•á‡§Ç ‡§ï‡§∞‡•ç‡§∏‡§∞ ‡§ú‡•ã‡§°‡§º‡•á‡§Ç
                    const cursor = document.createElement('span');
                    cursor.className = 'cursor';
                    outputDiv.appendChild(cursor);
                }
            }

            // ‡§™‡§π‡§≤‡•Ä ‡§≤‡§æ‡§á‡§® ‡§∂‡•Å‡§∞‡•Ç ‡§ï‡§∞‡•á‡§Ç
            typeLine();
        }
    </script>

